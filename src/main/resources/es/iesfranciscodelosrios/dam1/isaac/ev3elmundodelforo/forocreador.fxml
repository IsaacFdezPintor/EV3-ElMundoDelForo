<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.iesfranciscodelosrios.dam1.isaac.ev3elmundodelforo.controllers.ForoControllerCreador">

    <!-- Título -->
    <Text fill="#333333" layoutX="174.0" layoutY="36.0" text="Foros y Comentarios" textAlignment="CENTER">
        <font>
            <Font name="Cooper Black" size="24.0" />
        </font>
    </Text>

    <!-- Botón "Mi Información" -->
    <Button fx:id="btnMiInformacion" layoutX="483.0" layoutY="15.0" onAction="#miInformacion" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 12px;" text="Mi Información" />

    <!-- Botón "Cerrar Sesión" -->
    <Button fx:id="btnCerrarSesion" layoutX="27.0" layoutY="15.0" onAction="#cerrarSesion" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 12px;" text="Cerrar sesión" />

    <!-- Panel principal con GridPane -->
    <GridPane hgap="20.0" layoutY="60.0" vgap="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
        <children>
            <!-- Columna 1: Lista de Foros -->
            <VBox prefWidth="200.0" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Lista de Foros" />
                    <ScrollPane fitToHeight="true" fitToWidth="true">
                        <ListView fx:id="listaForos" onMouseClicked="#mostrarForoSeleccionado" />
                    </ScrollPane>
                </children>
            </VBox>

            <!-- Columna 2: Comentarios y campo de entrada -->
            <VBox prefWidth="380.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0" VBox.vgrow="ALWAYS">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Comentarios" />
                    <ScrollPane prefHeight="200.0">
                        <ListView fx:id="listaComentarios" prefHeight="400.0" prefWidth="367.0" />
                    </ScrollPane>

                    <!-- Información del Foro -->
                    <VBox spacing="5.0" style="-fx-background-color: #e0e0e0; -fx-padding: 10; -fx-background-radius: 5;">
                        <children>
                            <Label style="-fx-font-weight: bold;" text="Información del Foro" />
                            <Label fx:id="labelDescripcionForo" text="Descripción: " wrapText="true" />
                            <Label fx:id="labelCreadorForo" text="Creador: " />
                            <Label text="Label" />
                        </children>
                    </VBox>

                    <!-- Botones de Editar y Eliminar -->
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button fx:id="btnAnadir" onAction="#anadirNuevoForo" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 13px;" text="Añadir" />
                        <Button fx:id="btnEditar" onAction="#actualizarForo" style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 13px;" text="Editar" />
                        <Button fx:id="btnEliminar" onAction="#eliminarItemSeleccionado" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 13px;" text="Eliminar" />
                    </HBox>

                    <!-- Campo de escritura de comentario -->
                    <TextArea fx:id="campoComentario" prefHeight="60.0" promptText="Escribe tu comentario aquí..." style="-fx-font-size: 12px;" wrapText="true" />

                    <!-- Botón publicar -->
                    <Button fx:id="btnPublicarComentario" alignment="CENTER_RIGHT" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 5px;" text="Publicar" />
                </children>
            </VBox>
        </children>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>

</AnchorPane>
